{
  "name": "static-prototype-build-tool",
  "version": "1.0.0",
  "description": "Static prototype build tool using npm",
  "devDependencies": {
    "clean-css": "^4.2.1",
    "clean-css-cli": "^4.2.1",
    "concurrently": "^4.0.1",
    "http-server": "^0.11.1",
    "jshint": "^2.9.6",
    "mocha": "^5.2.0",
    "reload": "^2.3.1",
    "uglify-js": "^3.4.9",
    "watch": "^1.0.2"
  },
  "scripts": {
    "lint": "echo '=> linting' && jshint assets/scripts/*.js",
    "pretest": "npm run lint",
    "test": "echo '=> testing' && mocha test/",

    "scss": "node-sass src/scss/index.scss dist/public/css/index.css",
    "lint:scss": "sass-lint -c app/config/.sass-lint.yml 'src/scss/**/*.scss' -v -q",
    "process:css": "echo '=> processing css' && npm run lint:scss && npm run scss",

    "minify:js": "echo '=> minify:js' && uglifyjs assets/scripts/main.js -o dist/public/js/main.min.js",
    "minify:css": "echo '=> minify:css' && cleancss assets/css/main.css -o dist/public/css/main.min.css",

    "build": "echo '=> building' && npm run test -s && npm run minify:js -s && npm run minify:css -s",
    "watch:scss": "watch 'npm run minify:css' assets/scripts/ assets/css/",
    "watch": "watch 'npm run minify:js && npm run minify:css' assets/scripts/ assets/css/",
    "server": "reload -b --dir dist/public",

    "prestart": "npm run test && npm run build",
    "start": "concurrently \"npm run watch\" \"npm run server\""
  },
  "author": "Jelizaveta Potapova",
  "license": "ISC"
}
